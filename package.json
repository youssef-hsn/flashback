{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "flashback",
  "title": "Flashback",
  "description": "Helps you record what you have been doing so you can have a timeline of notes you did throughout the day",
  "icon": "flashback-logo.png",
  "author": "youscef",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Documentation"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "setup",
      "title": "Setup Database",
      "subtitle": "Flashback",
      "description": "Run database migrations on the database specified in preferences",
      "mode": "no-view",
      "disabledByDefault": false
    }
  ],
  "preferences": [
    {
      "name": "dbHost",
      "type": "textfield",
      "required": false,
      "title": "Database Host",
      "description": "PostgreSQL database host",
      "default": "localhost",
      "placeholder": "localhost"
    },
    {
      "name": "dbPort",
      "type": "textfield",
      "required": false,
      "title": "Database Port",
      "description": "PostgreSQL database port",
      "default": "5432",
      "placeholder": "5432"
    },
    {
      "name": "dbName",
      "type": "textfield",
      "required": true,
      "title": "Database Name",
      "description": "PostgreSQL database name",
      "placeholder": "flashback"
    },
    {
      "name": "dbUser",
      "type": "textfield",
      "required": true,
      "title": "Database User",
      "description": "PostgreSQL database username",
      "placeholder": "postgres"
    },
    {
      "name": "dbPassword",
      "type": "password",
      "required": true,
      "title": "Database Password",
      "description": "PostgreSQL database password"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.2",
    "@raycast/utils": "^1.17.0",
    "postgres": "^3.4.7",
    "sql.js": "^1.12.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}